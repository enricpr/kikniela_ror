<article id="bets">
	<h1>Apostes</h1>
	{{#link-to 'bets.new'}}Nova aposta{{/link-to}}
	<table class="table table-hover">
		<thead>
				<tr>
					<th><a {{action pushSort "week"}}>Setmana</a></th>
					<th>Partit</th>
					<th>Pronòstic</th>
					<th>Encert</th>
					<th><a {{action pushSort "week"}}>Usuari</a></th>
					<th>Actualització</th>
				</tr>
		</thead>
		<tbody>
			{{#each bet in model}}
				<tr>
					<td>{{bet.week}}</td>
					<td>{{bet.game_id}}</td>
					<td>{{bet.tip}}</td>
					<td>
						{{#if bet.hit}}
							<span class="glyphicon glyphicon-ok"></span>
						{{else}}
							<span class="glyphicon glyphicon-remove"></span>
						{{/if}}
					</td>
					<td>{{bet.user_id}}</td>
					<td>{{bet.formatDate}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</article>
{{outlet}}