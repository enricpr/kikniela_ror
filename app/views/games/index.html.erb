<h1>Listing games</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Result</th>
      <th>Week</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team1 %></td>
        <td><%= game.team2 %></td>
        <td><%= game.result %></td>
        <td><%= game.week %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

